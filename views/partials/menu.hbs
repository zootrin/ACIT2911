<div id="menu">
    <ul id="menuList">
        <div style="display: flex; align-items:center;">

            <li><a href="/" class="home_link"><img src="/images/home.png" alt="home_icon" class="home_icon"></a></li>
            <div>
                <form method="get" action="/search" style="display: flex; align-items:center;">

                    <input type="search" name="keyword" id="search" placeholder="Search..."
                        style="width:18vw; margin-left:0.5vw;" required="true">

                    <input class="button" type="submit" value="Go"
                        style="width:2.5em; height:1.85em; margin-left:5px;"></input>

                </form>
            </div>
        </div>

        <div>
            {{#if isAuthenticated}}

            <li class="login"><a class="active" href="/logout">Logout</a></li>

            <li class="login"><a class="inbox" href="/dms">
                    <img src="/images/inbox.png" alt="inbox-icon" class="inbox_icon"></a>
            </li>

            <li class="login" id="notifications">
                <button name="notifDropdown" id="notifDropdown" type="button" class="notification"
                    onclick="toggleNotif()">
                    <img src="/images/notification.png" alt="notification-icon" id="notifImg">
                    <span class="badge" id="notifCount"></span>
                </button>

                <div class="hide" id="notifs">
                    <ul id="notif_list">

                    </ul>
                </div>
            </li>

            <li class="login">
                <a class="username" href="/user/{{user._id}}">Welcome, {{user.username}}</a>
            </li>


            {{else}}

            <li class="login"><a class="active" href="/login">Login</a></li>

            <li class="login"><a href="/registration">Register</a></li>

            {{/if}}
        </div>
    </ul>
</div>